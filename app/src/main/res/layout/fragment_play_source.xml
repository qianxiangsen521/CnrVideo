<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/play_source_list_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/cnr_player_lv_divider"
        android:dividerHeight="1px"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cnr_main_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/player_reload_program_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="@string/player_reload"
            android:textColor="@color/cnr_white"
            android:textSize="@dimen/player_progam_title_size" />

        <TextView
            android:id="@+id/player_clear_cache"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/player_clear_cache"
            android:textColor="@color/cnr_white"
            android:textSize="@dimen/player_progam_title_size" />
    </LinearLayout>

</LinearLayout>